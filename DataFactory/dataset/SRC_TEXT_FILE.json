		},
		"parameters": {
			"FileName": {
				"type": "string"
			},
			"FileEncoding": {
				"type": "string",
				"defaultValue": "UTF-8"
			},
			"Container": {
				"type": "string"
			},
			"Folder": {
				"type": "string"
			},
			"ColumnDelim": {
