			"parameters": {
				"host": {
					"value": "@dataset().host",
					"type": "Expression"
				},
				"username": {
					"value": "@dataset().username",
					"type": "Expression"
				},
				"password": {
					"value": "@dataset().password",
					"type": "Expression"
				}
			}
		},
		"parameters": {
			"host": {
				"type": "string"
			},
			"filePath": {
				"type": "string"
			},
			"username": {
				"type": "string"
			},
			"password": {
				"type": "string"
			}
		},
		"folder": {
			"name": "MDP-Framework/FTP"
		},
		"annotations": [],
		"type": "Binary",
		"typeProperties": {
			"location": {
				"type": "FtpServerLocation",
