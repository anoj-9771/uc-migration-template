{
	"name": "GetSchemaFromOracle",
	"properties": {
		"activities": [
			{
				"name": "GetSchemaFromMaximo",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "OracleSource",
						"oracleReaderQuery": "SELECT \n    obj.object_name, \n    atc.column_name, \n    atc.data_type, \n    atc.data_length \nFROM \n    all_tab_columns atc,\n    (SELECT \n        * \n     FROM \n         all_objects\n     WHERE \n      --  object_name like 'GL_JE%'\n        -- owner = 'maximo'\n         object_type in ('TABLE','VIEW')   \n    ) obj\nWHERE \n    atc.table_name = obj.object_name\nORDER BY \n    obj.object_name, \n    atc.column_name;",
						"partitionOption": "None",
						"queryTimeout": "02:00:00"
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".txt"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"name": "OBJECT_NAME"
								},
								"sink": {
									"type": "String",
									"ordinal": 1
								}
							},
							{
								"source": {
									"name": "COLUMN_NAME"
								},
								"sink": {
									"type": "String",
									"ordinal": 2
								}
							},
							{
								"source": {
									"name": "DATA_TYPE"
								},
								"sink": {
									"type": "String",
									"ordinal": 3
								}
							},
							{
								"source": {
									"name": "DATA_LENGTH"
								},
								"sink": {
									"type": "String",
									"ordinal": 4
								}
							}
						]
					}
				},
				"inputs": [
					{
						"referenceName": "SRC_Oracle",
						"type": "DatasetReference",
						"parameters": {
							"kvSecret": "daf-oracle-labware-connectionstring"
						}
					}
				],
				"outputs": [
					{
						"referenceName": "DLS_Csv",
						"type": "DatasetReference",
						"parameters": {
							"filePath": "raw/oracle/maximo_schema.csv"
						}
					}
				]
			}
		],
		"folder": {
			"name": "MDP-Framework/Setup"
		},
		"annotations": []
	}
}