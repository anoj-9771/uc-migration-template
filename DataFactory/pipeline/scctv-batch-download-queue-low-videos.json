{
	"name": "scctv-batch-download-queue-low-videos",
	"properties": {
		"activities": [
			{
				"name": "ForEachVideo",
				"type": "ForEach",
				"dependsOn": [],
				"userProperties": [],
				"typeProperties": {
					"items": {
						"value": "@pipeline().parameters.videoBatch",
						"type": "Expression"
					},
					"isSequential": false,
					"activities": [
						{
							"name": "http-download-to-blob",
							"type": "Copy",
							"dependsOn": [],
							"policy": {
								"timeout": "0.12:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"source": {
									"type": "BinarySource",
									"storeSettings": {
										"type": "HttpReadSettings",
										"requestMethod": "GET"
									},
									"formatSettings": {
										"type": "BinaryReadSettings"
									}
								},
								"sink": {
									"type": "BinarySink",
									"storeSettings": {
										"type": "AzureBlobStorageWriteSettings"
									}
								},
								"enableStaging": false
							},
							"inputs": [
								{
									"referenceName": "HTTP_Binary",
									"type": "DatasetReference",
									"parameters": {
										"httpUrl": {
											"value": "@concat('https://api.ap.kaltura.com/p/107/sp/10700/playManifest/entryId/', split(item().name, '-')[0], '/format/download/protocol/https/flavorParamIds/', split(split(item().name, '-')[1], '.')[0])",
											"type": "Expression"
										}
									}
								}
							],
							"outputs": [
								{
									"referenceName": "scctv_videos_inbound_blob_video_file",
									"type": "DatasetReference",
									"parameters": {
										"video_id": {
											"value": "@concat(split(item().name, '-')[0], '.mp4')",
											"type": "Expression"
										}
									}
								}
							]
						},
						{
							"name": "archive-que",
							"type": "Copy",
							"dependsOn": [
								{
									"activity": "http-download-to-blob",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"policy": {
								"timeout": "0.12:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"source": {
									"type": "BinarySource",
									"storeSettings": {
										"type": "AzureBlobStorageReadSettings",
										"recursive": true,
										"deleteFilesAfterCompletion": false
									},
									"formatSettings": {
										"type": "BinaryReadSettings"
									}
								},
								"sink": {
									"type": "BinarySink",
									"storeSettings": {
										"type": "AzureBlobStorageWriteSettings"
									}
								},
								"enableStaging": false
							},
							"inputs": [
								{
									"referenceName": "kaltura_video_queue_high_inbound_blob_file",
									"type": "DatasetReference",
									"parameters": {
										"fileName": {
											"value": "@item().name",
											"type": "Expression"
										}
									}
								}
							],
							"outputs": [
								{
									"referenceName": "kaltura_video_queue_low_archive_blob_file",
									"type": "DatasetReference",
									"parameters": {
										"fileName": {
											"value": "@item().name",
											"type": "Expression"
										}
									}
								}
							]
						}
					]
				}
			}
		],
		"parameters": {
			"videoBatch": {
				"type": "array"
			}
		},
		"variables": {
			"video_filename": {
				"type": "String"
			},
			"complete": {
				"type": "Boolean",
				"defaultValue": false
			},
			"fail": {
				"type": "Boolean",
				"defaultValue": false
			}
		},
		"folder": {
			"name": "AI-ML/Sewer CCTV"
		},
		"annotations": []
	}
}