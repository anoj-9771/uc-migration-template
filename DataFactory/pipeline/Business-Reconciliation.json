						"storedProcedureParameters": {
							"BusinessReconGroup": {
								"type": "String",
								"value": {
									"value": "@pipeline().parameters.BusinessReconGroup",
									"type": "Expression"
								}
							}
						},
						"partitionOption": "None"
					},
					"dataset": {
						"referenceName": "AzureSqlDatabase_Ctrldb",
