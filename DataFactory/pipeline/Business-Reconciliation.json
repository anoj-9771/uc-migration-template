								{
									"activity": "Lookup_copy_rec",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"policy": {
								"timeout": "7.00:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"storedProcedureName": "[CTL].[UpdateBusinessRecCurated]",
								"storedProcedureParameters": {
									"RecordsTargetTable": {
										"value": {
											"value": "@activity('Lookup_copy_rec').output.firstRow.RecordCount",
											"type": "Expression"
										},
										"type": "Int64"
									},
									"BusinessRecId": {
										"value": {
											"value": "@item().BusinessRecId",
											"type": "Expression"
										},
										"type": "Int64"
									},
									"UpdatedBatchExecutionId": {
										"value": {
											"value": "@pipeline().parameters.BatchLogId",
											"type": "Expression"
										},
										"type": "Int64"
									},
									"UpdatedTaskExecutionLogId": {
										"value": {
											"value": "@pipeline().parameters.TaskExecutionLogId",
