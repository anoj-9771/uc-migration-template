			"MeasureName": {
				"type": "string",
				"defaultValue": "Billing Document Count"
			}
		},
		"variables": {
			"TargetQuery": {
				"type": "String"
			}
		},
		"folder": {
			"name": "Validation"
		},
		"annotations": []
	}
