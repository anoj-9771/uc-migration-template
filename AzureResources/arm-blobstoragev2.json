{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "accountNames": {
            "type": "string",
            "defaultValue": "something, something"
        },
        "zones": {
            "type": "string"
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Specifies the Azure location where the key vault should be created."
            }
        },
        "storageAccountType": {
            "type": "string",
            "defaultValue": "Standard_LRS",
            "allowedValues": [
                "Standard_LRS",
                "Standard_GRS",
                "Standard_ZRS",
                "Premium_LRS"
            ],
            "metadata": {
                "description": "Storage Account type"
            }
        },
        "skuName": {
            "type": "string",
            "defaultValue": "Standard",
            "allowedValues": [
                "Standard",
                "Premium"
            ],
            "metadata": {
                "description": "Specifies the SKU for the key vault."
            }
        }
    },
    "functions": [
        {
            "namespace": "ads",
            "members": {
                "serviceWithNamingStandard": {
                    "parameters": [
                        {
                            "name": "prefix",
                            "type": "string"
                        },
                        {
                            "name": "serviceacronym",
                            "type": "string"
                        },
                        {
                            "name": "environment",
                            "type": "string"
                        },
                        {
                            "name": "suffix",
                            "type": "string"
                        }
                    ],
                    "output": {
                        "type": "string",
                        "value": "[concat(parameters('prefix'), '-', parameters('serviceacronym'), '-', parameters('environment'))]"
                    }
                },
                "serviceWithNamingStandardNoHyphen": {
                    "parameters": [
                        {
                            "name": "prefix",
                            "type": "string"
                        },
                        {
                            "name": "serviceacronym",
                            "type": "string"
                        },
                        {
                            "name": "environment",
                            "type": "string"
                        },
                        {
                            "name": "suffix",
                            "type": "string"
                        }
                    ],
                    "output": {
                        "type": "string",
                        "value": "[concat(parameters('prefix'), parameters('serviceacronym'), parameters('environment'))]"
                    }
                }
            }
        }
    ],
    "variables": {
        "accountNamesObject": "[split(replace(parameters('accountNames'),' ',''), ',')]",
        "zonesObject": "[split(replace(parameters('zones'),' ',''), ',')]",
        "copy": [
            {
                "name": "storageAccounts",
                "count": "[length(variables('accountNamesObject'))]",
                "input": {
                    "name": "[variables('accountNamesObject')[copyIndex('storageAccounts', 0)]]"
                }
            }
        ]
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[variables('accountNamesObject')[copyIndex()]]",
            "apiVersion": "2018-07-01",
            "location": "[parameters('location')]",
            "sku": {
                "name": "[parameters('storageAccountType')]",
                "tier": "[parameters('skuName')]"
            },
            "kind": "StorageV2",
            "tags": {
                "displayName": "Azure Blob Storage Account"
            },
            "copy": {
                "name": "storage",
                "count": "[length(variables('accountNamesObject'))]"
            },
            "properties": {
                "accessTier": "Hot",
                "isHnsEnabled": true
            },
            "resources": [
                {
                    "name": "[concat('default/', variables('zonesObject')[copyIndex()])]",
                    "type": "blobServices/containers",
                    "apiVersion": "2018-07-01",
                    "dependsOn": [
                        "[variables('accountNamesObject')[copyIndex()]]"
                    ]
                }
            ]
        }
    ],
    "outputs": {
        "storageAccounts": {
            "value": "[variables('storageAccounts')]",
            "type": "array"
        }
    }
}