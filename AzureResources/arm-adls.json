{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "accountNames": {
            "type": "string",
            "defaultValue": "something, something"
        },
        "zones": {
            "type": "string"
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Specifies the Azure location where the key vault should be created."
            }
        },
        "storageAccountType": {
            "type": "string",
            "defaultValue": "Standard_LRS",
            "allowedValues": [
                "Standard_LRS",
                "Standard_GRS",
                "Standard_ZRS",
                "Premium_LRS"
            ],
            "metadata": {
                "description": "Storage Account type"
            }
        },
        "skuName": {
            "type": "string",
            "defaultValue": "Standard",
            "allowedValues": [
                "Standard",
                "Premium"
            ],
            "metadata": {
                "description": "Specifies the SKU for the key vault."
            }
        },
        "advancedThreatProtectionEnabled": {
          "type": "bool",
          "defaultValue": true,
          "metadata": {
            "description": "Enable or disable Advanced Threat Protection."
          }
        }
    },
    "functions": [
        {
            "namespace": "ads",
            "members": {
                "serviceWithNamingStandard": {
                    "parameters": [
                        {
                            "name": "prefix",
                            "type": "string"
                        },
                        {
                            "name": "serviceacronym",
                            "type": "string"
                        },
                        {
                            "name": "environment",
                            "type": "string"
                        },
                        {
                            "name": "suffix",
                            "type": "string"
                        }
                    ],
                    "output": {
                        "type": "string",
                        "value": "[concat(parameters('prefix'), '-', parameters('serviceacronym'), '-', parameters('environment'))]"
                    }
                },
                "serviceWithNamingStandardNoHyphen": {
                    "parameters": [
                        {
                            "name": "prefix",
                            "type": "string"
                        },
                        {
                            "name": "serviceacronym",
                            "type": "string"
                        },
                        {
                            "name": "environment",
                            "type": "string"
                        },
                        {
                            "name": "suffix",
                            "type": "string"
                        }
                    ],
                    "output": {
                        "type": "string",
                        "value": "[concat(parameters('prefix'), parameters('serviceacronym'), parameters('environment'))]"
                    }
                }
            }
        }
    ],
    "variables": {
        "accountNamesObject": "[toLower(replace(parameters('accountNames'),'-',''))]", 
        "zonesObject": "[split(toLower(replace(parameters('zones'),' ','')), ',')]",
        "copy": [
            {
                "name": "zones",
                "count": "[length(variables('zonesObject'))]",
                "input": {
                    "name": "[variables('zonesObject')[copyIndex('zones', 0)]]"
                }
            }
        ]
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[variables('accountNamesObject')]",
            "apiVersion": "2018-07-01",
            "location": "[parameters('location')]",
            "sku": {
                "name": "[parameters('storageAccountType')]",
                "tier": "[parameters('skuName')]"
            },
            "kind": "StorageV2",
            "tags": {
                "displayName": "Azure Data Lake Storage Account"
            },
            "properties": {
                "accessTier": "Hot",
                "isHnsEnabled": true,
                "supportsHttpsTrafficOnly": true,
                "allowBlobPublicAccess": false
            },
            "resources": [
              {
                "condition": "[parameters('advancedThreatProtectionEnabled')]",
                "type": "providers/advancedThreatProtectionSettings",
                "name": "Microsoft.Security/current",
                "apiVersion": "2019-01-01",
                "dependsOn": ["[resourceId('Microsoft.Storage/storageAccounts/', variables('accountNamesObject'))]"],
                "properties": {"isEnabled": true}
              }
            ]
        },
        {
            "name": "[concat(variables('accountNamesObject'),'/','default/', variables('zonesObject')[copyIndex()])]",
            "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
            "apiVersion": "2018-07-01",
            "dependsOn": [
                "[variables('accountNamesObject')]"
            ],
            "copy": {
                "name": "storage",
                "count": "[length(variables('zonesObject'))]"
            }
        }
    ],
    "outputs": {}
}