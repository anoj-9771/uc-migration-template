{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "accountNames": {
            "type": "string",
            "metadata": {
                "description": "Specifies a name for the resource"
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "Australia East",
            "allowedValues": [
                "Australia East",
                "Australia Southeast"
            ],
            "metadata": {
                "description": "Specifies the location for the resource"
            }
        },
        "zones": {
            "type": "string",
            "defaultValue": "raw,cleansed,curated,datalab,synapsestaging"
        },
        "skuName": {
            "type": "string",
            "defaultValue": "Standard_LRS",
            "allowedValues": [
                "Standard_LRS",
                "Premium_LRS"
            ],
            "metadata": {
                "description": "Specifies the storage SKU name"
            }
        },
        "skuTier": {
            "type": "string",
            "defaultValue": "Standard",
            "allowedValues": [
                "Standard",
                "Premium"
            ],
            "metadata": {
                "description": "Specifies the storage SKU tier"
            }
        },
        "adfResourceId": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Resource ID of Data Factory (Required for Network ACL)"
            }
        },
        "vnetNameInternalSubnetId": {
            "type": "string",
            "metadata": {
                "description": "Resource ID of Internal Subnet (Used by Private Endpoints and VMs)"
            }
        },
        "vnetNameDatabricksPrivateSubnetId": {
            "type": "string",
            "metadata": {
                "description": "Resource ID of Databricks Private Subnet"
            }
        },
        "vnetNameDatabricksPublicSubnetId": {
            "type": "string",
            "metadata": {
                "description": "Resource ID of Databricks Public Subnet"
            }
        }
    },
    "variables": {
        "accountNamesObject": "[toLower(replace(parameters('accountNames'),'-',''))]", 
        "zonesObject": "[split(toLower(replace(parameters('zones'),' ','')), ',')]",
        "copy": [
            {
                "name": "zones",
                "count": "[length(variables('zonesObject'))]",
                "input": {
                    "name": "[variables('zonesObject')[copyIndex('zones', 0)]]"
                }
            }
        ]
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[variables('accountNamesObject')]",
            "apiVersion": "2021-04-01",
            "location": "[parameters('location')]",
            "sku": {
                "name": "[parameters('skuName')]",
                "tier": "[parameters('skuTier')]"
            },
            "kind": "StorageV2",
            "tags": {
                "displayName": "Azure Data Lake Storage Account"
            },
            "properties": {
                "accessTier": "Hot",
                "isHnsEnabled": true,
                "supportsHttpsTrafficOnly": true,
                "allowBlobPublicAccess": false,
                "networkAcls": {
                    "resourceAccessRules": [
                        {
                            "tenantId": "[subscription().tenantId]",
                            "resourceId": "[parameters('adfResourceId')]"
                        }
                    ],
                    "bypass": "AzureServices",
                    "virtualNetworkRules": [
                        {
                            "id": "[parameters('vnetNameInternalSubnetId')]",
                            "action": "Allow"
                        },
                        {
                            "id": "[parameters('vnetNameDatabricksPrivateSubnetId')]",
                            "action": "Allow"
                        },
                        {
                            "id": "[parameters('vnetNameDatabricksPublicSubnetId')]",
                            "action": "Allow"
                        }
                    ],
                    "defaultAction": "Deny"
                }
            },
            "resources": []
        },
        {
            "name": "[concat(variables('accountNamesObject'),'/','default/', variables('zonesObject')[copyIndex()])]",
            "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
            "apiVersion": "2018-07-01",
            "dependsOn": [
                "[variables('accountNamesObject')]"
            ],
            "copy": {
                "name": "storage",
                "count": "[length(variables('zonesObject'))]"
            }
        }
    ],
    "outputs": {}
}