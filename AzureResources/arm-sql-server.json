{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
  
    "parameters": {    
      "location": {
        "type": "string",
        "defaultValue": "[resourceGroup().location]",
        "metadata": {
          "description": "Specifies the Azure location where the key vault should be created."
        }
      },  
      "azureSqlServerName": {
        "type": "string",
        "metadata": {
          "description": "Azure SQL Server Name"
        }
      },  
      "AzureSqlServerUn": {
        "type": "string",
        "metadata": {
          "description": "SQL Server User Name"
        },
        "defaultValue": "azureadmin"
      },
      "AzureSqlServerPw": {
        "type": "string",
        "metadata": {
          "description": "SQL Server Password"
        }
      },
      "diagnosticSettingsWorkspaceID": {
          "type": "string",
          "metadata": {
              "description": "Log Analytics Workspace ID for Logs"
          }
      },
      "isAuditEnabled": {
        "type": "bool",
        "defaultValue": false,
        "metadata": {
            "description": "Enable Auditing of Microsoft support operations (DevOps)"
        }
      },
      "isMSDevOpsAuditEnabled": {
        "type": "bool",
        "defaultValue": false,
        "metadata": {
            "description": "Enable Auditing of Microsoft support operations (DevOps)"
        }
      },
      "internalSubnetId": {
          "type": "string",
          "metadata": {
              "description": "Resource ID of Internal Subnet (Used by Private Endpoints and VMs)"
          }
      }
    },
    "resources": [
      {
          "name": "[parameters('azureSqlServerName')]",
          "type": "Microsoft.Sql/servers",
          "apiVersion": "2019-06-01-preview",
          "location": "[parameters('location')]",
          "tags": {},
          "identity": {
            "type": "SystemAssigned"
          },
          "properties": {
            "administratorLogin": "[parameters('AzureSqlServerUn')]",
            "administratorLoginPassword": "[parameters('AzureSqlServerPw')]",
            "version": "12.0",
            "minimalTlsVersion": "1.2",
            "publicNetworkAccess": "disabled"
          },
          "resources": [
              {
                "apiVersion": "2019-04-01",
                "name": "[concat(parameters('azureSqlServerName'), '-pe')]",
                "type": "Microsoft.Network/privateEndpoints",
                "location": "[parameters('location')]",
                "dependsOn": [
                "[resourceId('Microsoft.Sql/servers', parameters('azureSqlServerName'))]"
                ],
                "properties": {
                    "privateLinkServiceConnections": [
                        {
                            "name": "[concat(parameters('azureSqlServerName'), '-pe-conn')]",
                            "properties": {
                                "privateLinkServiceId": "[resourceId('Microsoft.Sql/servers', parameters('azureSqlServerName'))]",
                                "groupIds": ["sqlServer"]
                            }
                        }
                    ],
                    "manualPrivateLinkServiceConnections": [],
                    "subnet": {
                        "id": "[parameters('internalSubnetId')]"
                    }
                }
            },
            {
              "type": "databases",
              "apiVersion": "2017-03-01-preview",
              "location": "[parameters('location')]",
              "dependsOn": [
                "[parameters('azureSqlServerName')]"
              ],
              "name": "master",
              "properties": {}
            },
            {
              "condition": "[parameters('isAuditEnabled')]",
              "type": "databases/providers/diagnosticSettings",
              "name": "[concat('master/microsoft.insights/','service')]",
              "dependsOn": [
                "[parameters('azureSqlServerName')]",
                "[resourceId('Microsoft.Sql/servers/databases', parameters('azureSqlServerName'), 'master')]"
              ],
              "apiVersion": "2017-05-01-preview",
              "properties": {
                "name": "service",
                "workspaceId": "[parameters('diagnosticSettingsWorkspaceID')]",
                "logs": [
                  {
                    "category": "SQLSecurityAuditEvents",
                    "enabled": true,
                    "retentionPolicy": {
                      "days": 0,
                      "enabled": false
                    }
                  },
                  {
                    "condition": "[parameters('isMSDevOpsAuditEnabled')]",
                    "category": "DevOpsOperationsAudit",
                    "enabled": true,
                    "retentionPolicy": {
                      "days": 0,
                      "enabled": false
                    }
                  }
                ]
              }
            },
            {
              "condition": "[parameters('isAuditEnabled')]",
              "apiVersion": "2017-03-01-preview",
              "type": "auditingSettings",
              "name": "DefaultAuditingSettings",
              "dependsOn": [
                "[resourceId('Microsoft.Sql/servers/', parameters('azureSqlServerName'))]"
              ],
              "properties": {
                "State": "Enabled",
                "isAzureMonitorTargetEnabled": true
              }
            },
            {          
              "condition": "[parameters('isMSDevOpsAuditEnabled')]",
              "type": "devOpsAuditingSettings",
              "apiVersion": "2020-08-01-preview",
              "name": "Default",
              "dependsOn": ["[parameters('azureSqlServerName')]"],
              "properties": {
                "State": "Enabled",
                "isAzureMonitorTargetEnabled": true
            }
          }
        ]
      }
    ],
  "outputs": {}
}
  