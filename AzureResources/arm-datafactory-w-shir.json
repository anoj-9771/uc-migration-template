{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "dataFactoryName": {
            "type": "string"
        },
        "dataFactorySHIRName":{
            "type": "string"
        },
        "location":{
            "type": "string"
        }
    },
    "functions": [
        {
            "namespace": "ads",
            "members": {
                "serviceWithNamingStandard": {
                    "parameters": [
                        {
                            "name": "prefix",
                            "type": "string"
                        },
                        {
                            "name": "serviceacronym",
                            "type": "string"
                        },
                        {
                            "name": "environment",
                            "type": "string"
                        },
                        {
                            "name": "suffix",
                            "type": "string"
                        }
                    ],
                    "output": {
                        "type": "string",
                        "value": "[concat(parameters('prefix'), '-', parameters('serviceacronym'), '-', parameters('environment'))]"
                    }
                }
            }
        }
    ],
    "variables": {
        "dataFactoryName": "[parameters('dataFactoryName')]",
        "SHIRName": "[parameters('dataFactorySHIRName')]"
    },
    "resources": [
        {
            "name": "[variables('dataFactoryName')]",
            "apiVersion": "2018-06-01",
            "type": "Microsoft.DataFactory/factories",
            "location": "[parameters('location')]",
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {},
            "resources": [
                {
                    "type": "integrationruntimes",
                    "name": "[variables('SHIRName')]",
                    "dependsOn": [
                        "[variables('dataFactoryName')]"
                    ],
                    "apiVersion": "2017-09-01-preview",
                    "properties": {
                        "type": "SelfHosted"
                    }
                }
            ]
        }
    ],
    "outputs": {}
}